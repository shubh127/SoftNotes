<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/white_curve"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:padding="7dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_view_img"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:text="Name"
            android:textSize="13sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/search_alias_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:text="alias_name"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/search_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:text="email"
            android:textSize="11sp"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/search_upload_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="upload count"
            android:textColor="#9813CA"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>